@using MSITTeam1Admin.ViewModels
@model backGrade
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="col-12">
        <div class="page-title my-4">
            <h2>前後測驗成績檢視</h2>
        </div>
    </div>
    <section id="main-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="bootstrap-data-table-panel">
                        <div class="table-responsive">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered my-3">
                                <thead>
                                    <tr>
                                        <th>帳號</th>
                                        <th>課程外顯碼</th>
                                        <th>前測成績</th>
                                        <th>前測成績時間</th>
                                        <th>後測成績</th>
                                        <th>後測成績時間</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var item in Model.TClassGrade)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FAccountId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FClassCode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FBeforeClassGrade)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FBeforeClassTime,"Date")
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FAfterClassGrade)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FAfterClassTime, "Date")
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
